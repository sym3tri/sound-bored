  </div>

  <div class="sample-pads-container">
    {{! TODO: render rows based on sampler.totalRows }}
    <div class="sampler-pad-row row-1"></div>
    <div class="sampler-pad-row row-2"></div>
    <div class="sampler-pad-row row-3"></div>
    <div class="sampler-pad-row row-4"></div>
  </div>
</div>
